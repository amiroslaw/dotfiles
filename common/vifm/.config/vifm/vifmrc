" nmap RR	:!patool extract --outdir %D %f <cr>
" nmap rc	:!patool create %d:t.7z %f <cr> 
" nmap rl	:!patool list %f %m <cr> 

" magicimage display resolution of image
nmap ii	:!identify %f %S <cr> 

nmap cx	:chmod+x<cr>

"pdf combine
nmap cp	:!pdfunite %f %d:t.pdf <cr>
"pdftotext
nmap cP	:!pdftotext %c %c:r <cr>
" remove spaces from filename
noremap c- :!echo %f:gs? ?^? | xargs -n1 | xargs -r -I@ -P 0  sh -c 'V="@"; mv "${V//^/ }" "${V//^/-}"' <cr>
"Tesseract OCR
noremap cT :!for i in %f; do tesseract "$i"  "${i%%.png}"; done <cr>
noremap ct :!echo %f:gs? ?^? | xargs -n1 | xargs -r -I @ -P 0 sh -c 'V="@"; tesseract "${V//^/ }" "${V//^/ }"' <cr>
" noremap ct :!echo %f | xargs -n1 | xargs -r -I @ -P 0  tesseract "@" "@" <cr>
"dragon dr - drag from and dl drop to
nmap dr :!dragon-drop %f <cr> 
" will drag all selected files, cos it doesn't have multiple selection option
nmap dR :!dragon-drop -a %f <cr> 
nmap dl :!dragon-pull.sh <cr>
" ffmpeg
noremap cm :!for i in %f; do  ffmpeg -i "$i" -f segment -segment_time 900 -c copy "${i%%.*}-%%02d.mp3"; done <cr>

" diff
nmap ,d :!meld %c %C %i<cr> 
command! diff nvim -d %f %F
nmap ,D :diff<cr>
nmap ,c :compare listall<cr>

" copy text into other file
nmap cc :!cat %c >> %C <cr> 
" copy text from file
nmap <C-c> :!cat %c | xclip -sel clip<cr> 
" append text from clipboard into file
nmap <C-v> :!xclip -o -selection clipboard >> %c <cr>
"rozmiary katalogów
nmap du :!dua i<cr>
"change name without extension
nmap <F1> :command <cr>
nmap <F2> cW
