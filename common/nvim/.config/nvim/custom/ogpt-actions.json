{
  "grammar-append": {
    "type": "chat",
    "opts": {
      "template": "Modify the following {{lang}} text to improve only grammar and spelling:  \n\n{{input}}",
      "strategy": "append",
      "params": {
        "model": "mistral:7b",
        "temperature": 0.3
      }
    },
    "args": {
      "lang": {
        "type": "string",
        "optional": "true",
        "default": "english"
      }
    }
  },
  "translate-append": {
    "type": "chat",
    "opts": {
      "template": "Translate this into {{lang}}:\n\n{{input}}",
      "strategy": "append",
      "params": {
        "model": "mistral:7b",
        "temperature": 0.3
      }
    },
    "args": {
      "lang": {
        "type": "string",
        "optional": "true",
        "default": "english"
      }
    }
  },
  "format-adoc": {
    "type": "chat",
    "opts": {
      "template": "Render the following text as a asciidoc {{what}}. Remove `|` from the end of the each row, align borders. Append and prepend `|===` to the table. Do not add notes, headings or additional words: \n
	  {{input}}",
      "strategy": "replace",
      "params": {
        "model": "mistral:7b"
      }
    },
    "args": {
      "what": {
        "type": "string",
        "optional": "false",
        "default": "table"
      }
    }
  }

}
