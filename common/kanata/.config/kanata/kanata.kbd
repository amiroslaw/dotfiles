(defalias ;; common apps scripts
  apps (one-shot 500 (layer-while-held apps))
  lalt (tap-hold-release 200 200 @apps lalt)
  ;; url (cmd )
;; order matters
  qu (cmd qu.lua --menu)
  yt (cmd mpv.lua -o)
  qb (cmd ~/.config/qutebrowser/userscripts/session.sh)
  pom (cmd pomodoro.lua add -n)
  note (cmd wezterm start --class 'note' --cwd ~/Documents/notebook -- nvim)
  idea (cmd /opt/idea-IU-212.5284.40/bin/idea.sh)
  vifm (cmd xst -c vifm -e vifm )
  chat (cmd  scratchpad.sh chat "wezterm start --class chat -- nchat")
  audio (cmd audio.sh toggle)
  clip (cmd "/home/miro/.config/rofi/scripts/clipster/roficlip" )
  off (cmd rofi -show power-menu -modi power-menu:~/.config/rofi/scripts/power.sh)
  news (cmd scratchpad.sh newsboat "wezterm start --class newsboat -- newsboat")
  tw (cmd scratchpad.sh task "xst -c task -n task -e taskwarrior-tui")
  kee (cmd keecli.sh)
  video (cmd mpv.lua -o /home/miro/Videos)
  todo (cmd todo.lua add)
  fm (cmd pcmanfm )
