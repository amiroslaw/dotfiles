# external-url-viewer "urlscan -dc -r 'linkhandler {}'"
# macro
bind-key ; macro-prefix
browser ~/.config/newsboat/link.sh
macro ; open-in-browser
macro c set browser "echo %u | xclip -r -sel c" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro m set browser "~/.config/newsboat/dmenuhandler.sh" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
# download
macro d set browser "setsid -f url.lua audio" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro y set browser "setsid -f url.lua yt" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro Y set browser "setsid -f url.lua yt" ; open-all-unread-in-browser ; set browser ~/.config/newsboat/link.sh
macro k set browser "setsid -f url.lua kindle" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro K set browser "setsid -f url.lua kindle" ; open-all-unread-in-browser ; set browser ~/.config/newsboat/link.sh
# read
macro r set browser "setsid -f url.lua read" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro R set browser "setsid -f url.lua read" ; open-all-unread-in-browser ; set browser ~/.config/newsboat/link.sh
macro s set browser "setsid -f url.lua speed" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro i set browser "sxiv" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro I set browser "sxiv" ; open-all-unread-in-browser ; set browser ~/.config/newsboat/link.sh
macro l set browser "lynx" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
# play media
