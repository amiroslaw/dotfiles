macro a set browser "setsid -f mpv.lua audioplay" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro P set browser "setsid -f mpv.lua popuplist" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro A set browser "setsid -f mpv.lua audiolist" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro v set browser "setsid -f mpv.lua videoplay" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
macro V set browser "setsid -f mpv.lua videolist" ; open-in-browser ; set browser ~/.config/newsboat/link.sh
