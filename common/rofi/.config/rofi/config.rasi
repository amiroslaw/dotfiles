@theme "gruvbox-light"
/* @theme "one-light" */

configuration {

threads: 0;
terminal: "rofi-sensible-terminal";
show-icons: true;

kb-row-up:                      "Up,Control+k,Shift+Tab,Shift+ISO_Left_Tab";
kb-row-down:                    "Down,Control+j";
kb-accept-entry:                "Control+l,Return,KP_Enter";
kb-mode-next:                   "Control+n,Shift+Right,Control+Tab";
kb-mode-previous:               "Shift+Left,Control+Shift+Tab,Control+p";
kb-remove-char-back:            "BackSpace";
kb-page-prev: "Control+u";
kb-page-next: "Control+d";
kb-remove-char-forward: "Delete";
kb-toggle-case-sensitivity: "grave,dead_grave,Control+i";
kb-toggle-sort: "Control+s";
kb-clear-line: "Control+BackSpace";
kb-remove-word-back: "Control+w,Control+h";
kb-mode-complete: "Control+m";
/*	kb-row-select: "Control+space"; â†’ autocompletion*/ 
/*	kb-move-front: "Control+a";*/
/*	kb-move-end: "Control+e";*/
/* conflicts */
kb-remove-to-sol: "";
kb-remove-to-eol: "";

  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

