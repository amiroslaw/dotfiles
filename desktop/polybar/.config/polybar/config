[module/uptime]
type = custom/script
exec = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
label = %output%
format-prefix = " " 
interval = 300
; exec = ~/.config/polybar/system-uptime-pretty.sh
format-underline = ${colors.secondary}

[module/system-usb-udev]
