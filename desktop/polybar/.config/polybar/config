[bar/main]
monitor = ${env:MONITOR:DVI-D-0}
width = 100%
height = 24
;offset-x = 1%
;offset-y = 1%
; radius = 6.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

; font-0 = "TerminessTTF Nerd Font:pixelsize=10;1"
font-0 = "Ubuntu Nerd Font:pixelsize=9;1"
font-1 = "RobotoMono Nerd Font:pixelsize=8;1"
font-2 = unifont:fontformat=truetype:size=8:antialias=false;0

modules-left = bspwm windows1
modules-center = mpd currency
modules-right = cpu temp-amd fan-amd memory temp-nvidia fan-nvidia uptime filesystem wlan date weather pulseaudio powermenu updates
; system-usb-udev doesn't work
; pulseaudio alsa xbacklight battery volume eth xwindow bsplayout 
tray-position = right
tray-padding = 0
;tray-transparent = true
;tray-background = #0063ff

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
;scroll-up = bspc desktop -f prev.local
;scroll-down = bspc desktop -f next.local

cursor-click = pointer
cursor-scroll = ns-resize

;will cover bar if fullscreen needed to have 2 parameters to set 
;wm-restack = bspwm
;override-redirect = true
